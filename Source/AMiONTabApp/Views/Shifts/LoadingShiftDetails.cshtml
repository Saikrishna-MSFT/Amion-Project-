
@{
    ViewBag.Title = "LoadingShiftDetails";
}

<script>
   function RemoveURLParameter (url, parameter)  {
        var urlparts = url.split('?');
        if (urlparts.length >= 2) {
            var prefix = encodeURIComponent(parameter) + '=';
            var pars = urlparts[1].split(/[&;]/g);

            //reverse iteration as may be destructive
            for (var i = pars.length; i-- > 0;) {
                //idiom for string.startsWith
                if (pars[i].lastIndexOf(prefix, 0) !== -1) {
                    pars.splice(i, 1);
                }
            }
            url = urlparts[0] + '?' + pars.join('&');
            return url;
        } else {
            return url;
        }
    }

    $(document).ready(function () {
        $("#AmionDataLoading").show();
        window.location.href = (window.location.href.indexOf('?') > -1 ? RemoveURLParameter(window.location.href, 'selDate') + '&' : '?') + "selDate=" + new Date().getFullYear() + "-" + (("0" + (new Date().getMonth() + 1)).slice(-2)) + "-" + (("0" + new Date().getDate()).slice(-2));
    });
</script>

